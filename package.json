{
  "name": "koa-react-starter-service",
  "version": "1.0.0",
  "author": "cameron@pro.com",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "precommit": "lint-staged",
    "start": "yarn npm-run-all -p start:server start:app",
    "lint": "yarn npm-run-all -p lint:server lint:app",
    "test": "jest --config=jest.config.json",
    "build": "webpack --config webpack.config.ts",
    "prebuild": "check-engines",
    "postbuild": "cp package.json dist && cp yarn.lock dist && cp newrelic.js dist",
    "lint:app": "tslint -p src/app/tsconfig.json",
    "start:app": "webpack-dev-server --no-info --hot --open --history-api-fallback --config src/app/webpack.dev.ts",
    "test:app": "jest --config=src/app",
    "prestart:server": "check-engines",
    "start:server": "ts-node-dev -P src/server/tsconfig.json src/server | bunyan -L -o short",
    "test:server": "jest --config=src/server/jest.config.json",
    "lint:server": "tslint -p src/server/tsconfig.json"
  },
  "engines": {
    "node": "10.9.0"
  },
  "dependencies": {
    "@koa/cors": "2.2.2",
    "axios": "0.18.0",
    "bunyan": "1.8.12",
    "config": "2.0.1",
    "gelf-stream": "1.1.1",
    "koa": "2.5.2",
    "koa-bodyparser": "4.2.1",
    "koa-connect-history-api-fallback": "0.3.1",
    "koa-mount": "3.0.0",
    "koa-newrelic": "2.0.3",
    "koa-respond": "1.0.1",
    "koa-router": "7.4.0",
    "koa-static": "5.0.0",
    "newrelic": "4.8.1",
    "react": "16.5.0",
    "react-dom": "16.5.0",
    "react-hot-loader": "4.3.6",
    "react-redux": "5.0.7",
    "react-router-dom": "4.3.1",
    "redux": "4.0.0",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.3.0",
    "typesafe-actions": "2.0.4"
  },
  "devDependencies": {
    "@babel/core": "7.0.0",
    "@babel/plugin-proposal-class-properties": "7.0.0",
    "@babel/plugin-transform-classes": "7.0.0",
    "@babel/polyfill": "7.0.0",
    "@babel/preset-env": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.0.0",
    "@types/bunyan": "1.8.4",
    "@types/config": "0.0.34",
    "@types/enzyme": "3.1.13",
    "@types/enzyme-adapter-react-16": "1.0.3",
    "@types/gelf-stream": "file:src/server/types/gelf-stream",
    "@types/html-webpack-plugin": "3.2.0",
    "@types/jest": "23.3.1",
    "@types/koa": "2.0.46",
    "@types/koa-bodyparser": "5.0.1",
    "@types/koa-connect-history-api-fallback": "file:src/server/types/koa-connect-history-api-fallback",
    "@types/koa-mount": "3.0.1",
    "@types/koa-router": "7.0.31",
    "@types/koa-static": "4.0.0",
    "@types/koa__cors": "2.2.3",
    "@types/react": "16.4.13",
    "@types/react-dom": "16.0.7",
    "@types/react-hot-loader": "4.1.0",
    "@types/react-redux": "6.0.7",
    "@types/react-router-dom": "4.3.0",
    "@types/redux-logger": "3.0.6",
    "@types/webpack": "4.4.11",
    "@types/webpack-env": "1.13.6",
    "@types/webpack-node-externals": "1.6.3",
    "babel-loader": "8.0.2",
    "check-engines": "1.5.0",
    "enzyme": "3.6.0",
    "enzyme-adapter-react-16": "1.5.0",
    "fork-ts-checker-webpack-plugin": "0.4.9",
    "html-webpack-plugin": "3.2.0",
    "husky": "0.14.3",
    "jest": "23.5.0",
    "lint-staged": "7.2.2",
    "npm-run-all": "4.1.3",
    "ts-jest": "23.1.4",
    "ts-loader": "5.0.0",
    "ts-node-dev": "1.0.0-pre.29",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.11.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-react": "3.6.0",
    "typescript": "3.0.3",
    "webpack": "4.17.2",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.8",
    "webpack-node-externals": "1.7.2"
  },
  "lint-staged": {
    "src/app/**/*.{ts,tsx}": [
      "yarn lint:app"
    ],
    "src/server/**/*.{ts,tsx}": [
      "yarn lint:server"
    ],
    "src/**/*.{ts,tsx}": [
      "yarn test --passWithNoTests"
    ]
  }
}
