{
    "rootDir": "./",
    "transform": { "^.+\\.tsx?$": "ts-jest" },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
        "ts", "tsx", "js", "jsx", "json", "node"
    ],
    "setupFiles": [
        "./tests/setup.ts"
    ],
    "testPathIgnorePatterns": [
        "./config/*",
        "./tests/setup.ts"
    ],
    "collectCoverageFrom": [
        "**/*.{ts,tsx}",
        "!**/*.d.ts",
        "!**/config/**",
        "!**/webpack.*.ts"
    ]
}
