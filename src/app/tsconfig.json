{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "lib": ["es2018", "dom"]
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
